{
    "name": "pd/holidays",
    "type": "library",
    "description": "Přehled svátků pro různé lokalizace",
    "authors": [
        {
            "name": "Milan Pála",
            "email": "milan.pala@peckadesign.cz"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-mbstring": "*",
        "nette/utils": "^3.0",
        "nette/di": "^3.0",
        "nette/neon": "^3.0"
    },
    "require-dev": {
        "nette/tester": "2.3.*",
        "pd/coding-standard": "v1.27.*",
        "phpstan/phpstan": "^1.4.0"
    },
    "autoload": {
        "psr-4": {
            "Pd\\Holidays\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PdTests\\Holidays\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
